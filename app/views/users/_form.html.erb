  <div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">添加用户</h1>
  </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          添加用户
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <% if @user.name.present? %>
                <% url = users_update_save_path %>
              <%else%>
                <% url = users_create_user_path %>
              <%end%>
              <%=form_for @user, url: url do |f|%>
              
                <div class="form-group">
                  <label>输入手机信息</label>
                  <%= f.text_field :name,class: "form-control",placeholder: "用户名"%>
                  <%= f.email_field :email,class: "form-control",placeholder: "邮件"%>
                  <%= f.password_field :password,class: "form-control",placeholder: "请输入密码" %>
                  <%= f.password_field :comfirm_password,class: "form-control",placeholder: "确认密码" %>
                  
                </div>
                <%= f.submit "保存",class: "btn btn-default",id: "sub" %>
                <button type="reset" class="btn btn-default">重置</button>
              <% end %>
<% content_for :afterBody do %>
  <script type="text/javascript">
    $(function() {
      $("#sub").bind("click",function(event){
        var password = $("#user_password").val()
        var comfirm_password = $("#user_comfirm_password").val()
        if (password!=comfirm_password) {
          alert("2次密码不一样")
          return false
        }  
      })
    });
    
  </script>
<%end%>
